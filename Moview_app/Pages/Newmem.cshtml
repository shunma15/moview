@page
@model Moview_app.Pages.NewregModel

@{
    ViewData["Title"] = "Newreg";
}

<div class="layout">
<h1>アカウント作成</h1>
<hr />
        <form method="post" class="another-page">
            <p class="h5">*は必須の項目です。</p>
            <div class="form-group">
                <label asp-for="Account.Username" class="control-label">ユーザー名*</label>
                <input asp-for="Account.Username" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Account.Age" class="control-label">年齢</label>
                <input asp-for="Account.Age" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Account.Gender" class="control-label">性別</label>
              　<select asp-for="Account.Gender" class="form-control">
                    <option value="男性">男性</option>
                    <option value="女性">女性</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Account.Pass" class="control-label">パスワード*</label>
                <input asp-for="Account.Pass" class="form-control" type="password" required />
            </div>
            <div class="form-check">
                <input asp-for="Account.RememberMe" class="form-check-input" />
                <label asp-for="Account.RememberMe" class="form-check-label">ログイン状態を維持</label>
            </div>
            <div class="form-group">
                <input type="submit" value="作成" class="btn-large" />
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
